<?xml version="1.0" encoding="UTF-8"?>
<wizard>
	<projectOptions title="Composite API Creation Wizard" 
					description="Select how you would like to create your new composite API" 
					error="Please select a method to create composite API">
		<option id="new.compositeApiProject" default="true">Create New Composite API</option>
		<option id="import.compositeApiProject">Import composite API</option>
	</projectOptions>
	
	<projectOptionSettings>
		<settings optionId="new.compositeApiProject" 
				  title="Composite API" 
				  description="Create a new Composite API" 
				  error="Please give a name to the composite API">
			<data modelProperty="project.name" type="string" fieldController="org.wso2.developerstudio.eclipse.artifact.validators.CompositeApiProjectFieldController">Composite API Name*</data>	  
	
			<projectNatures>
				<nature>org.eclipse.jdt.core.javanature</nature>
			</projectNatures>
		</settings>
		<settings optionId="import.compositeApiProject" 
				  title="Composite API" 
				  description="Import existing composite API artifact" 
				  error="Browse and select an existing composite API artifact">
			<data modelProperty="project.name" type="string" fieldController="org.wso2.developerstudio.eclipse.artifact.validators.CompositeApiProjectFieldController">Composite API Name*</data>
			<data modelProperty="project.location" type="dir" filter="server" fieldController="org.wso2.developerstudio.eclipse.artifact.validators.CompositeApiProjectFieldController">Deployment Server Location*</data>
			<projectNatures>
				<nature>org.eclipse.jdt.core.javanature</nature>
			</projectNatures>
		</settings>
		
	</projectOptionSettings>
</wizard>
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	